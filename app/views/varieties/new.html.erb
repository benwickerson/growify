<%= form_for(@variety) do |f| %>

<%= f.label :vegetable %>
<%= f.collection_select :vegetable_id, Vegetable.all, :id, :name, include_blank: false %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :description %>
<%= f.text_area :description %>

<%= f.submit "New Variety", class: "btn" %>

<% end %>